%h2 All items

- @items.each do |item|
  %div
    = link_to( item.name, user_item_path( item.user.username , item.id) )
    -# -raise params.inspect
    - unless @current_user.nil? || !@current_user.is_admin?
      = link_to( 'Delete', item, :method => :delete, :data => {:confirm => "Are you sure you want to delete #{item.name}?"})
      = link_to( 'Edit', edit_item_path(item.id))