= form_for @item do |f|
  %p
  = f.label :name
  = f.text_field :name
  %p
  = image_tag( @item.image_url(:thumb) )
  %p
  = f.label :image
  = f.file_field :image
  - f.text_field :image_cache
  %p
  = f.label :size
  = f.text_field :size
  %p
  = f.radio_button(:fit, "small")
  = f.label(:fit_small, "Too small")
  = f.radio_button(:fit, "right")
  = f.label(:fit_right, "Just right")
  = f.radio_button(:fit, "big")
  = f.label(:fit_big, "Too big")
  %p
  = f.label :brand_id
  = f.collection_select( :brand_id, Brand.order(:name => :asc), :id, :name,:prompt => true )
  = link_to('Add brand' , new_brand_path )
  %p
  = f.label :type_id
  = f.collection_select( :type_id, Type.order(:name => :asc), :id, :name,:prompt => true )
  %p
  = f.submit

  - if @item.errors.any?
    = @item.errors.full_messages