= form_for @item do |f|
  %div.formgroup
    = f.label :name
    = f.text_field :name, :class => 'form-control'
  %div.formgroup
    = image_tag( @item.image_url(:thumb) )
  %div.formgroup
    = f.label :image
    = f.file_field :image, :class => 'form-control'
    - f.text_field :image_cache, :class => 'form-control'
  %div.formgroup
    = f.label :size
    = f.text_field :size, :class => 'form-control'
  %div.formgroup
    = f.radio_button(:fit, "small")
    = f.label(:fit_small, "Too small")
    = f.radio_button(:fit, "right")
    = f.label(:fit_right, "Just right")
    = f.radio_button(:fit, "big")
    = f.label(:fit_big, "Too big")
  %div.formgroup
    = f.label :brand_id
    = f.collection_select( :brand_id, Brand.order(:name => :asc), :id, :name,:prompt => true )
    = link_to('Add brand' , new_brand_path )
  %div.formgroup
    = f.label :type_id
    = f.collection_select( :type_id, Type.order(:name => :asc), :id, :name,:prompt => true )
  %div.formgroup
    = f.submit :class =>"btn btn-default"
  %div.formgroup
    - if @item.errors.any?
      = @item.errors.full_messages